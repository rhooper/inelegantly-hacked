{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "sort-imports": ["error",
            {
                "allowSeparatedGroups": true
            }
        ],
        "prettier/prettier": ["error"]
    }
}
